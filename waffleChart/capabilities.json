
{
    "dataRoles": [
        {
            "displayName": "Category Data",
            "name": "Category",
            "kind": "Grouping"
        },
        {
            "displayName": "Paths",
            "name": "Paths",
            "kind": "Grouping",
            "description": "The value used to customize the shape of the data points",
            "requiredTypes": [{ "text": true }]
        },
        {
            "displayName": "Values",
            "name": "Values",
            "kind": "Measure",
            "requiredTypes": [{ "numeric": true }, { "integer": true }]
        },
        {
            "displayName": "Min Values",
            "name": "MinValue",
            "kind": "Measure",
            "requiredTypes": [{ "numeric": true }, { "integer": true }]
        },
        {
            "displayName": "Max Values",
            "name": "MaxValue",
            "kind": "Measure",
            "requiredTypes": [{ "numeric": true }, { "integer": true }]
        }
    ],
    "dataViewMappings": [
        {
            "conditions": [
                {
                    "Category": {
                        "min": 0,
                        "max": 4
                    },
                    "Paths": {
                        "min": 0,
                        "max": 1
                    },
                    "Values": {
                        "min": 0,
                        "max": 1
                    },
                    "MinValue": {
                        "min": 0,
                        "max": 1
                    },
                    "MaxValue": {
                        "min": 0,
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "for": { 
                        "in": "Category"
                    },
                    "dataReductionAlgorithm": { 
                        "top": {}
                    }
                },
                "values": {
                    "group": {
                        "by": "Paths",
                        "select": [
                            { "bind": { "to": "Values" } },
                            { "bind": { "to": "MinValue" } },
                            { "bind": { "to": "MaxValue" } }
                        ],
                        "dataReductionAlgorithm": {
                            "top": {}
                        }
                    }
                }
            }
        }
    ],
    "objects":  {
        "dataPoint": {
            "displayName": "Data Point",
            "properties": {
                "defaultColor": {
                    "displayName": "Default Color",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                },
                "fill": {
                    "displayName": "Fill",
                    "type": {
                        "fill": {
                            "solid": {
                                "color": true
                            }
                        }
                    }
                }
            }
        }
    },
    "sorting": {
        "default": {}
    }
}